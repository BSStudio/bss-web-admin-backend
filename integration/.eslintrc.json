{
  "parser": "@typescript-eslint/parser",
  "env": {
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "project": [
      "./tsconfig.json"
    ]
  },
  "extends": [
    "prettier",
    "plugin:prettier/recommended",
    "plugin:jest/all",
    "plugin:@typescript-eslint/recommended-type-checked",
    "plugin:@typescript-eslint/strict-type-checked",
    "plugin:@typescript-eslint/stylistic-type-checked"
  ],
  "plugins": [
    "prettier",
    "jest"
  ],
  "rules": {
    "jest/no-hooks": "off"
  }
}
